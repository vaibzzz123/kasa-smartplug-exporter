# Environment variables example
# Copy this file to .env and fill in your values
# EXAMPLE_VAR=value

# Kasa cloud credentials (required for newer smart devices like KP125M)
KASA_USERNAME=your_email@example.com
KASA_PASSWORD=your_password

# Optional: specify device model(s) to filter by (e.g., KP125M, HS103)
# Supports comma-separated list for multiple models (e.g., KP125M,HS103,EP25)
# Leaving empty defaults to all models
KASA_MODELS=

# Optional: custom port for the Prometheus exporter (default: 4467)
PORT=4467

# Optional: polling interval for Prometheus exporter in seconds (default: 10)
POLL_INTERVAL=10

# Optional: logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL) (default: INFO)
LOG_LEVEL=INFO
